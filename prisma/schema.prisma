// Prisma Schema for AI Financial Co-Pilot UMKM

generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProfitAnalysis {
  id                String   @id @default(cuid())
  salesTotal        Float
  cogsTotal         Float
  operationalCost   Float
  profit            Float
  profitMargin      Float
  insightText       String
  createdAt         DateTime @default(now())
}

model PricingDecision {
  id                String   @id @default(cuid())
  productName       String
  costPerUnit       Float
  currentPrice      Float
  desiredMarginMin  Float
  desiredMarginMax  Float
  suggestedPrices   String   // JSON string
  adviceText        String
  createdAt         DateTime @default(now())
}

model DailySummary {
  id                String   @id @default(cuid())
  date              DateTime @unique
  totalSales        Float
  totalCogs         Float
  operationalCost   Float
  profit            Float
  marginPercent     Float
  createdAt         DateTime @default(now())
}

model Product {
  id                String   @id @default(cuid())
  name              String
  category          String?
  costPerUnit       Float
  pricePerUnit      Float
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
